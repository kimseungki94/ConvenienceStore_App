<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="128dp"
            android:layout_height="128dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="2dp"
                android:hint="show me"/>
            <TextView
                android:id="@+id/text_category"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/text_name"
                android:padding="2dp"
                android:hint="show me"/>
            <TextView
                android:id="@+id/text_detail"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/text_name"
                android:padding="2dp"
                android:layout_toRightOf="@id/text_category"
                android:hint="show me"/>
            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/text_category"
                android:padding="2dp"
                android:hint="show me"/>
            <TextView
                android:id="@+id/text_discount"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/text_category"
                android:layout_toRightOf="@+id/text_price"
                android:padding="2dp"
                android:hint="show me"/>

            <ImageView
                android:id="@+id/image_store"
                android:layout_below="@+id/text_price"
                android:layout_height="32dp"
                android:layout_width="wrap_content" />

            <ImageButton
                android:id="@+id/favoriteBtn"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/favorite"
                android:onClick="pressFavorite"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
